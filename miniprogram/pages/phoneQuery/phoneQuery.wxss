/* pages/phoneQuery/phoneQuery.wxss */
page {
  background: #FBF9FE;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.page-h1 {
  font-size: 40rpx;
  padding: 10rpx 0;
}
.page-h2 {
  font-size: 30rpx;
  padding: 30rpx 0 10rpx;
}

.contentp {
  font-size: 25rpx;
  line-height: 1.8;
  margin-bottom: 20rpx;
  color: #666;
}

.section {
  padding: 10rpx 0;
}
.section input {
  padding: 20rpx;
  background: #fff;
  border: 1px solid #dedede;
  font-size: 40rpx;
  border-radius: 5rpx;
}
.btn-area button {
  margin-right: 10rpx;
  font-size: 30rpx;
  line-height: 2.6;

}

.show-result {
  margin: 20rpx 0;
  padding: 20rpx;
  background: #f5f5f5;
  border: #dedede 1px solid;
  border-radius: 5rpx;
  font-size: 30rpx;
}