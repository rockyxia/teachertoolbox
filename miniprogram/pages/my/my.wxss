page {
  background: #FBF9FE;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.userinfo, .recommend-item {
  /* margin-top: 40rpx; */
  height: 180rpx;
  width: 100%;
  background: #fff;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
  /* border-left: none;
  border-right: none; */
  display: flex;
  flex-direction: row;
  align-items: center;
  transition: all 300ms ease;
}

.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  margin: 20rpx;
  border-radius: 50%;
  background-size: cover;
  background-color: #eee;
}

.userinfo-avatar:after {
  border: none;
}

.username {
  font-size: 30rpx;
}
.username text {
  font-size: 25rpx;
  color: #666;
  margin-left: 10rpx;
}
.intro {
  margin-top: 10rpx;
  font-size: 25rpx;
  color: #999;
}

.page-title {
  width: 100%;
  margin: 20rpx 0 10rpx;
  padding: 0 20rpx;
  font-size: 30rpx;
}

.recommend {
  width: 100%;
  border-top: 1px solid rgba(0, 0, 0, 0.1);
}
.recommend .content {
  flex: 1;
}

.btnbox {
  flex: 0 0 120rpx;
}
.btnbox button {
  padding: 0 10rpx;
}