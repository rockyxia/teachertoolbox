/**app.wxss**/
.container {
  display: flex;
  flex-direction: column;
  /* align-items: center; */
  box-sizing: border-box;
  height: 100vh;
} 
.main {
  flex: 1;
  width: 100%;
  overflow-y: scroll;
}
.innerbox {
  padding: 10rpx 20rpx;
}
.footer {
  display: flex;
  justify-content: center;
  height: 150rpx;
  width: 100%;
  border-top: 1px solid #dedede;
  background-color: #fff;
}
.footer-item {
  flex: 1;
  text-align: center;
  padding-top: 10rpx;
}
.footer-nav {
  line-height: 1.2;
  background: none;
}
button.footer-nav::after{
  border: none;
}
.footer-nav .text {
  font-size: 20rpx;
}